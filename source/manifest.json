{
	"name": "BookBub Book Search Extension",
	"version": "1.0.0",
	"description": "Searches for books on BookBub",
	"manifest_version": 3,
	"action": {},
	"icons": {
		"48": "BB_Logo_small.jpeg",
		"96": "BB_Logo_2x.jpeg"
	},
	"action": {
		"default_icon": "BB_Logo_2x.jpeg"
	},
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"],
		"css": ["content.css"],
		"run_at": "document_idle"
	}]
}
